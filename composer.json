{
    "name": "shays/logger",
    "type": "library",
    "description": "A simpler unopinionated logger library",
    "authors": [
        {
            "name": "Shay Segev",
            "email": "shaysegev99@gmail.com"
        }
    ],
    "scripts": {
        "test": "phpunit --testdox --colors=always tests",
        "phpcs": "phpcs --standard=ruleset.xml src tests",
        "phpstan": "phpstan analyse"
    },
    "require": {
        "php": "^7.2",
        "psr/log": "^1.1",
        "symfony/serializer": "^4.3",
        "symfony/property-access": "^4.3",
        "symfony/filesystem": "^4.3"
    },
    "autoload": {
        "psr-4": {
            "Shays\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "8",
        "squizlabs/php_codesniffer": "*",
        "phpstan/phpstan": "^0.12.9",
        "phpstan/phpstan-phpunit": "^0.12.6"
    },
    "minimum-stability": "dev"
}
